{
  "name": "vscode-devgotchi",
  "displayName": "DevGotchi - Your Virtual Developer",
  "description": "A virtual programmer companion that grows and levels up as you code",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "devgotchi.openPanel",
        "title": "Open Developer Panel",
        "category": "DevGotchi"
      }
    ]
  },
    "repository": {
    "type": "git",
    "url": "https://github.com/johnfacey/vscode-devgotchi.git"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  }
}